{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "debug",
      "displayName": "Debug",
      "description": "Debug configuration",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "debug-asan",
      "displayName": "Debug[AddressSanitizer]",
      "description": "Debug[AddressSanitizer] configuration",
      "inherits": "debug",
      "environment": {
        "CFLAGS": "$penv{CFLAGS} -fsanitize=address",
        "CXXFLAGS": "$penv{CXXFLAGS} -fsanitize=address",
        "LDFLAGS": "$penv{LDFLAGS} -fsanitize=address"
      }
    },
    {
      "name": "relwithdebinfo",
      "displayName": "RelWithDebInfo",
      "description": "RelWithDebInfo configuration",
      "inherits": "debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "release",
      "displayName": "Release",
      "description": "Release configuration",
      "inherits": "debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "configuration": "Debug",
      "jobs": 0
    },
    {
      "name": "debug-asan",
      "configurePreset": "debug-asan",
      "configuration": "Debug",
      "jobs": 0
    },
    {
      "name": "relwithdebinfo",
      "configurePreset": "relwithdebinfo",
      "configuration": "RelWithDebInfo",
      "jobs": 0
    },
    {
      "name": "release",
      "configurePreset": "release",
      "configuration": "Release",
      "jobs": 0
    }
  ],
  "testPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    },
    {
      "name": "debug-asan",
      "inherits": "debug",
      "configurePreset": "debug-asan",
      "configuration": "Debug"
    },
    {
      "name": "relwithdebinfo",
      "inherits": "debug",
      "configurePreset": "relwithdebinfo",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "release",
      "inherits": "debug",
      "configurePreset": "release",
      "configuration": "Release"
    }
  ],
  "workflowPresets": [
    {
      "name": "debug",
      "steps": [
        {
          "type": "configure",
          "name": "debug"
        },
        {
          "type": "build",
          "name": "debug"
        },
        {
          "type": "test",
          "name": "debug"
        }
      ]
    },
    {
      "name": "debug-asan",
      "steps": [
        {
          "type": "configure",
          "name": "debug-asan"
        },
        {
          "type": "build",
          "name": "debug-asan"
        },
        {
          "type": "test",
          "name": "debug-asan"
        }
      ]
    },
    {
      "name": "relwithdebinfo",
      "steps": [
        {
          "type": "configure",
          "name": "relwithdebinfo"
        },
        {
          "type": "build",
          "name": "relwithdebinfo"
        },
        {
          "type": "test",
          "name": "relwithdebinfo"
        }
      ]
    },
    {
      "name": "release",
      "steps": [
        {
          "type": "configure",
          "name": "release"
        },
        {
          "type": "build",
          "name": "release"
        },
        {
          "type": "test",
          "name": "release"
        }
      ]
    }
  ]
}